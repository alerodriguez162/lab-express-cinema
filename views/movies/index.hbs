<div class="container">
    <h1 class="mt-4">IronHack Cinema</h1>
    <h5>Click on the movie to check the showtimes!</h5>
    <div class="row">
        {{#each movies}}
        <div class="col-4 my-4">
            <div class="card text-center h-100 card-movie">
                <img src="{{image}}" class="card-img-top" alt="Movie image">
                <div class="card-body">
                    <h5 class="card-title h-50">{{title}}</h5>
                    <a href="/movie/{{id}}" class="btn center btn-primary ">See More</a>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>